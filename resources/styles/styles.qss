/* === Estilo general === */
QWidget {
    font-family: system-ui, sans-serif;
}

/* === TabWidget === */
QTabWidget::pane {
    border: 1px solid gray;
    border-radius: 6px;
    padding: 4px;
    background: transparent;
}

/* === Tabs === */
QTabBar::tab {
    border-radius: 4px;
    padding: 6px 12px;
    margin: 6px; /* separaci칩n entre tabs */
    min-width: 80px;
}

/* Hover */
QTabBar::tab:hover {
    background-color: gray;
    border-bottom: 3px solid rgba(0, 0, 0, 0.2);
}

/* Tab seleccionado */
QTabBar::tab:selected {
    border: 1px solid gray;
    font-weight: bold;
}

QTabBar::tab:selected:hover {
    background-color: dark gray;
}

/* Mantener texto horizontal en tabs a los lados */
QTabBar::tab:top,
QTabBar::tab:bottom {
    min-height: 24px;
}

QTabBar::tab:left,
QTabBar::tab:right {
    min-width: 80px;
    min-height: 24px;
}

/* === Alineaci칩n del tab bar === */
QTabWidget::tab-bar {
    alignment: center;
}

/* === Botones === */
QPushButton {
    background-color: #5B9BD5;
    color: white;
    border: none;
    border-radius: 8px;
    padding: 8px 12px;
    min-width: 80px;
    max-width: 120px;
    font-weight: 500;
    transition: all 0.2s ease;
}

/* Hover - m치s claro */
QPushButton:hover {
    background-color: #7AAFDE;
}

/* Click/Pressed - m치s oscuro */
QPushButton:pressed {
    background-color: #4472B4;
}
